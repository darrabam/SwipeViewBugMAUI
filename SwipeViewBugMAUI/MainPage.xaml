<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwipeViewBugMAUI.MainPage"
             x:Name="ThisPage">

    <CollectionView ItemsSource="{Binding Numbers}" Margin="60">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <SwipeView>
                    <SwipeView.LeftItems>
                        <SwipeItems Mode="Reveal" SwipeBehaviorOnInvoked="RemainOpen">
                            <SwipeItemView>
                                <Button Text="+"
                                        WidthRequest="40"
                                        BackgroundColor="LightGreen"
                                        Command="{Binding Source={x:Reference ThisPage}, Path=IncrementCommand}"
                                        CommandParameter="{Binding .}" />
                            </SwipeItemView>
                            <SwipeItemView>
                                <Button Text="-" 
                                        WidthRequest="40"
                                        BackgroundColor="LightCoral"
                                        Command="{Binding Source={x:Reference ThisPage}, Path=DecrementCommand}"
                                        CommandParameter="{Binding .}" />
                            </SwipeItemView>
                        </SwipeItems>
                    </SwipeView.LeftItems>
                    <SwipeView.RightItems>
                        <SwipeItems Mode="Reveal" SwipeBehaviorOnInvoked="RemainOpen">
                            <SwipeItemView>
                                <Button Text="+"
                                        WidthRequest="40"
                                        BackgroundColor="LightGreen"
                                        Command="{Binding Source={x:Reference ThisPage}, Path=IncrementCommand}"
                                        CommandParameter="{Binding .}" />
                            </SwipeItemView>
                            <SwipeItemView>
                                <Button Text="-" 
                                        WidthRequest="40"
                                        BackgroundColor="LightCoral"
                                        Command="{Binding Source={x:Reference ThisPage}, Path=DecrementCommand}"
                                        CommandParameter="{Binding .}" />
                            </SwipeItemView>
                        </SwipeItems>
                    </SwipeView.RightItems>
                    <SwipeView.TopItems>
                        <SwipeItems Mode="Reveal" SwipeBehaviorOnInvoked="RemainOpen">
                            <SwipeItemView>
                                <Button Text="+"
                                        WidthRequest="40"
                                        BackgroundColor="LightGreen"
                                        Command="{Binding Source={x:Reference ThisPage}, Path=IncrementCommand}"
                                        CommandParameter="{Binding .}" />
                            </SwipeItemView>
                            <SwipeItemView>
                                <Button Text="-" 
                                        WidthRequest="40"
                                        BackgroundColor="LightCoral"
                                        Command="{Binding Source={x:Reference ThisPage}, Path=DecrementCommand}"
                                        CommandParameter="{Binding .}" />
                            </SwipeItemView>
                        </SwipeItems>
                    </SwipeView.TopItems>
                    <SwipeView.BottomItems>
                        <SwipeItems Mode="Reveal" SwipeBehaviorOnInvoked="RemainOpen">
                            <SwipeItemView>
                                <Button Text="+"
                                        WidthRequest="40"
                                        BackgroundColor="LightGreen"
                                        Command="{Binding Source={x:Reference ThisPage}, Path=IncrementCommand}"
                                        CommandParameter="{Binding .}" />
                            </SwipeItemView>
                            <SwipeItemView>
                                <Button Text="-" 
                                        WidthRequest="40"
                                        BackgroundColor="LightCoral"
                                        Command="{Binding Source={x:Reference ThisPage}, Path=DecrementCommand}"
                                        CommandParameter="{Binding .}" />
                            </SwipeItemView>
                        </SwipeItems>
                    </SwipeView.BottomItems>

                    <Grid Padding="10" Margin="10" BackgroundColor="LightBlue" HeightRequest="120"  >
                        <Label Text="{Binding Value}" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Grid>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
